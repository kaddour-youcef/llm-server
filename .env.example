# vLLM / upstream
VLLM_URL=http://vllm:8000
VLLM_TIMEOUT_S=120
VLLM_MAX_CONCURRENCY=8
QUEUE_MAX_SIZE=2048
BATCH_MAX_LATENCY_MS=10

# DB
DATABASE_URL=postgresql+psycopg://gateway:gateway_password@llm-server-db:5432/gateway

# Redis
REDIS_URL=redis://llm-server-redis:6379/0
RATE_LIMIT_RPS_DEFAULT=10
RATE_LIMIT_BURST_DEFAULT=20

# Admin UI (CORS + frontend)
# Comma-separated list of allowed browser origins for CORS
# Example: http://localhost:3000,http://192.168.1.12:3000
ADMIN_ORIGINS=http://localhost:3000
# Backward-compat single origin (used if ADMIN_ORIGINS not set)
ADMIN_ORIGIN=http://llm-server-admin:3000
# Optional regex to allow ranges (dev convenience)
# e.g. ^https?://(localhost|127\.0\.0\.1|192\.168\.1\.[0-9]+):\d+$
ALLOW_ORIGIN_REGEX=
DISPLAY_MODEL_NAME=mistralai/Mistral-Small-3.2-24B-Instruct-2506
# Next.js admin (client) calls â€” use NEXT_PUBLIC_* for browser
# This should be a URL the browser can reach, not a Docker hostname.
NEXT_PUBLIC_GATEWAY_URL=http://localhost:8080
GATEWAY_URL=http://gateway:8080



# Security
API_KEY_HASH_SCHEME=bcrypt
ADMIN_BOOTSTRAP_KEY=replace_me_once
ALEMBIC_UPGRADE_ON_START=true

HUGGING_FACE_HUB_TOKEN=<hf_token>
