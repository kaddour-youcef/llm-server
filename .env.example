# vLLM / upstream
VLLM_URL=http://vllm:8000
VLLM_TIMEOUT_S=120
VLLM_MAX_CONCURRENCY=8
QUEUE_MAX_SIZE=2048
BATCH_MAX_LATENCY_MS=10

# DB
DATABASE_URL=postgresql+psycopg://gateway:gateway_password@db:5432/gateway

# Redis
REDIS_URL=redis://redis:6379/0
RATE_LIMIT_RPS_DEFAULT=10
RATE_LIMIT_BURST_DEFAULT=20

# Admin
ADMIN_ORIGIN=http://localhost:8181
DISPLAY_MODEL_NAME=mistralai/Mistral-Small-3.2-24B-Instruct-2506

# Security
API_KEY_HASH_SCHEME=bcrypt
ADMIN_BOOTSTRAP_KEY=replace_me_once
ALEMBIC_UPGRADE_ON_START=true


# Optional: Hugging Face token if pulling gated models in vLLM
# HUGGING_FACE_HUB_TOKEN=

